---
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/src/layouts/prism.css">
		<title>{title}</title>
	</head>
	<body class="relative font-khand text-xl text-gray-800 p-4 sm:p-5 md:p-8 lg:px-20 max-w-screen-xl mx-auto">
    <div class="bg-[url('/public/patterns.jpg')] bg-[size:360px] fixed top-0 bottom-0 right-0 left-0 -z-10 opacity-40"></div>
    <slot />
		<script src="./prism.js"></script>
	</body>
</html>
<style is:global>

  @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
	@tailwind base;
  @tailwind components;
  @tailwind utilities;
  @layer base{
    h1 {
      @apply font-poppins font-semibold py-4 text-3xl sm:text-4xl md:text-5xl
    }
    h2 {
      @apply font-poppins font-semibold py-4 text-2xl sm:text-3xl md:text-4xl text-center border-t-2 border-b-2
    }
    h3 {
      @apply font-poppins font-semibold py-4 text-xl sm:text-2xl md:text-3xl
    }
    p, ul, ol {
      @apply font-poppins font-light leading-5 py-2 text-base sm:text-lg lg:text-xl
    }
    .footerLink {
      @apply flex justify-end
    }
    li {
      @apply list-outside list-disc py-2 ml-6
    }
    ol li{
      @apply list-decimal list-outside
    }
    article {
      @apply mb-6 sm:mb-7 lg:mb-8
    }
    strong {
      @apply font-semibold
    }
    td {
      @apply p-2 border-2 border-black
    }
    thead {
      @apply bg-slate-200
    }
	}
</style>