---
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/src/layouts/prism.css">
		<title>{title}</title>
	</head>
	<body class="max-w-5xl mx-auto p-2 xs:px-3 sm:px-6 sm:py-8 md:px-10 font-khand text-amber-900">
    <slot />
	</body>
</html>
<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=BenchNine:wght@300;400;700&family=Khand:wght@300;400;500;600;700&family=Poppins:wght@300;400&display=swap');
	@tailwind base;
  @tailwind components;
  @tailwind utilities;
	html {
		background-color: #FFF8E8;
	}
  @layer base{
    h1 {
      @apply font-bold text-3xl sm:text-4xl md:text-5xl
    }
    h2 {
      @apply max-w-screen-2xl text-xl leading-6 text-red-400 font-medium sm:text-2xl md:text-3xl
    }
		p {
			@apply max-w-screen-2xl text-lg leading-6 sm:text-xl md:text-2xl
		}
		section {
			@apply flex flex-col gap-4 xs:gap-5 sm:gap-6
		}
		ul {
			@apply max-w-screen-2xl text-lg leading-6 font-medium list-disc sm:text-xl md:text-2xl
		}
		ul > p {
			@apply pb-4 xs:pb-5 sm:pb-6
		}
		li {
			@apply list-disc list-inside
		}
		em {
			@apply italic
		}
	}
</style>