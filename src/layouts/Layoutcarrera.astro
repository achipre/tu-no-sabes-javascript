---
import { ViewTransitions } from "astro:transitions";
import { Sidebar } from "../components/react/SidebarCarrera";
const { title } = Astro.props;
const { pathname } = Astro.url;

---
<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/public/interview/favicon.svg" />
		<link rel="stylesheet" href="/src/layouts/prism.css">
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="max-w-5xl mx-auto p-2 xs:px-3 sm:px-6 sm:py-8 md:px-10 font-khand text-amber-900">
		<Sidebar client:visible transition:persist direction={pathname} />
		<main class="sm:px-12 xl:px-0">
			<slot />
		</main>
		<script src="./prism.js"></script>
	</body>
</html>
<style is:global>
	@tailwind base;
  @tailwind components;
  @tailwind utilities;
	html {
		background-color: #FFF8E8;
		border-color: #78350f;
	}
  @layer base{
		@font-face {
			font-family: 'Khand-Regular';
			font-display: swap;
			src: url(/font/code/Khand-Light.ttf);
			font-weight: 300;
		}
		@font-face {
			font-family: 'Khand-Regular';
			font-display: swap;
			src: url(/font/code/Khand-Regular.ttf);
			font-weight: 600;
		}
		@font-face {
			font-family: 'Bench Nine Bold';
			font-display: swap;
			src: url(/font/code/BenchNine-Bold.ttf);
		}
		@font-face {
			font-family: 'Victor Mono';
			font-display: swap;
			src: url(/font/code/VictorMono-Variable.ttf);
		}
		@font-face {
			font-family: 'Victor Mono Italic';
			font-style: italic;
			font-display: swap;
			src: url(/font/code/VictorMono-Variable-Italic.ttf);
		}
    h1 {
      @apply font-bold text-3xl sm:text-4xl md:text-5xl pb-4 xs:pb-6 sm:pb-7 md:pb-8
    }
    h2 {
      @apply font-semibold leading-6 text-amber-900 text-2xl sm:text-3xl md:text-4xl pt-4 xs:pt-6 sm:pt-7 md:pt-8 pb-1  sm:pb-2
    }
    h3 {
      @apply font-semibold italic leading-6 text-amber-900 text-xl sm:text-[1.5rem] md:text-[1.8rem] pt-4 xs:pt-6 sm:pt-7 md:pt-8 pb-1  sm:pb-2
    }
		
    h4 {
      @apply font-normal italic leading-6 text-amber-900 text-lg sm:text-[1.25rem] md:text-[1.6rem] pt-6 pb-4
    }
		p {
			@apply  text-lg leading-6 sm:text-xl md:text-2xl indent-6 xs:indent-7 sm:indent-8 md:indent-9
		}
		
		a {
			@apply text-[#F05454] no-underline
		}
		section {
			@apply flex flex-col gap-4 xs:gap-5 sm:gap-6
		}
		article {
			@apply xs:gap-5 sm:gap-6 border-2 border-amber-900 p-4 xs:p-5 sm:p-6 md:p-7 my-4 xs:my-5 sm:my-6 md:my-7 bg-[#f6e4c5]
		}
		article > p:first-child {
			@apply text-xl sm:text-2xl md:text-3xl font-semibold indent-0 pb-3 xs:pb-4 sm:pb-5 md:pb-6
		}
		article > p:nth-child(2) {
			@apply indent-0
		}
		nota{
			@apply bg-[#f6e4c5] p-2 xs:p-3 sm:p-4 md:p-5 rounded-lg flex gap-2 xs:gap-3 sm:gap-4 md:gap-5 items-center
		}
		blockquote {
			@apply border-amber-900 border-l-[6px] xs:border-l-[8px] sm:border-l-[10px] md:border-l-[12px] pl-4 xs:pl-5 sm:pl-6 md:pl-7 my-2 xs:my-3 sm:my-4 md:my-5
		}
		figcaption {
			@apply italic text-center pt-1 text-sm xs:text-base sm:text-lg md:text-xl
		}
		table {
			@apply text-base leading-6 mx-auto my-2 sm:my-4 md:my-10 sm:text-lg md:text-xl
		}
		td, th {
			@apply border-2 border-amber-900 px-2 sm:px-4 md:px-5 py-2
		}
		sup {
			@apply bg-blue-300 cursor-default p-0 px-2 rounded-full mx-1 aspect-square
		}
		info {
			@apply absolute opacity-0 bg-[#f6e4c5] h-8 border-[1px] -top-8 text-nowrap px-2 rounded-full -translate-x-1/2 leading-8 shadow-lg border-amber-900
		}
		strong {
			@apply font-black
		}
		codeinline {
			@apply font-victor text-amber-700 px-2 rounded-sm bg-[#f6e4c5] text-xs xs:text-sm sm:text-base md:text-lg inline-block -translate-y-[2px] selection:text-[#f6e4c5] selection:bg-amber-700
		}
		pre {
			@apply font-victor rounded-sm !leading-3 xs:!leading-4 sm:!leading-4 md:!leading-5 py-6 !text-xs xs:!text-sm sm:!text-base md:!text-lg
		}
		header + p, h2 + p, h3 + p, h4 + p, blockquote > p:first-child {
			@apply indent-0
		}
		tecla {
			@apply bg-white font-mono border-[1px] drop-shadow-sm shadow-[0_0_0_2px_#ffffff,0_0_0_3px_#78350f] border-amber-900 p-[2px] mx-1 text-xs xs:text-sm sm:text-base md:text-lg dark:text-amber-900
		}
		ul {
			@apply text-lg leading-6 font-medium list-disc sm:text-xl md:text-2xl py-1 sm:py-2 md:py-3
		}
		ul > li > p {
			@apply pl-4 xs:pl-5 sm:pl-6 md:pl-7 lg:pl-8 -indent-4 lg:-indent-5
		}
		ol {
			@apply text-lg leading-6 font-medium list-decimal sm:text-xl md:text-2xl py-1 xs:py-2  sm:py-3 
		}
		ol > li {
			@apply list-decimal pl-4 xs:pl-5 sm:pl-6 md:pl-7 lg:pl-8
		}
		li {
			@apply list-none list-inside
		}
		em {
			@apply italic
		}
	}
	@layer components {
		.title-article {
			@apply text-xl sm:text-2xl md:text-3xl font-semibold text-center
		}
	}

	.fadeIn {
		animation: fadeIn 350ms ease-in both
	}
	.note {
 		@apply  text-lg leading-6 sm:text-xl md:text-2xl px-4 xs:px-5 sm:px-6 md:px-7 indent-0 py-3 xs:py-4 sm:py-5 md:py-6
	}
	.optionOne, .optionDos {
		background-color: transparent;
		font-weight: 900;
	}
	.optionOne > p:first-child, .optionDos > p:first-child {
		@apply text-lg leading-6 sm:text-xl md:text-2xl indent-0 py-0
	}
	.optionOne > p:nth-child(2) {
		@apply text-lg leading-6 sm:text-xl md:text-2xl indent-6 xs:indent-7 sm:indent-8 md:indent-9
	}
	.optionOne > p {
		@apply italic
	}
	.optionDos {
		margin: 0.6rem;
		padding: 2rem;
		background-color: transparent;
		font-weight: 400;
		box-shadow: 0 0 0 2px #78350f,
              0 0 0 6px #FFF8E8,
              0 0 0 10px #78350f;
	}
	.optionDos > p:first-child {
		@apply bg-transparent font-normal
	}
	sup:hover > info {
		animation: aparece 250ms ease-in both
	}


	@keyframes fadeIn {
		from { opacity: 0; transform: translateY(-18px); }
		to { opacity: 1; transform: translateY(0);}
	}
	@keyframes aparece {
		from { display: none; opacity: 0;}
		to { display: block; opacity: 1;}
	}
	
</style>