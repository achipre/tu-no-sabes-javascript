---
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/src/layouts/prism.css">
		<title>{title}</title>
	</head>
	<body class="max-w-5xl mx-auto px-2 xs:px-3 sm:px-6 sm:py-8 md:px-10">
    <slot />
	</body>
</html>
<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=BenchNine:wght@300;400;700&family=Khand:wght@300;400;500;600;700&family=Poppins:wght@300;400&display=swap');
	@tailwind base;
  @tailwind components;
  @tailwind utilities;
	html {
		background-color: #3C3D37;
	}
  @layer base{
    h1 {
      @apply font-khand font-semibold py-4 text-4xl sm:text-5xl md:text-6xl lg:text-7xl text-[#603F26]
    }
		a {
      @apply font-khand font-semibold py-4 text-xl sm:text-2xl md:text-3xl lg:text-4xl
    }
	}
</style>